<%- hidden = false unless local_assigns[:hidden] %>
<%= form_for [:admin, train], html: { style: "display: #{hidden ? 'none' : 'block'}", class: 'form-inline'} do |f| %>

  <%= render 'common/errors', resource: train %>

  <div class="form-group">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="form-group">
    <%= f.label :route %>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.label :order_wagons %>
    <%= f.check_box :order_wagons %>
  </div>


  <div class="form-group">
    <%= f.submit "#{ train.new_record? ? t('actions.create') : t('actions.edit') }" %>
  </div>
<% end %>
