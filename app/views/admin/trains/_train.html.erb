<tr>
  <td>
    <div id="train_number_<%= train.id %>">
      <%= train.number %>
    </div>
    <%= render 'form', train: train, hidden: true %>
  </td>
  <td><%= link_to t('actions.show'), [:admin, train] %></td>
  <td><%= link_to t('actions.edit'), '', class: 'edit_train', data: { train_id: train.id } %></td>
  <td><%= link_to t('actions.destroy'), [:admin, train], method: :delete, data: { confirm: t('text.are_you_sure') } %></td>
</tr>