<h1>Маршруты</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td>
          <div id="route_name_<%= route.id %>">
            <%= route.name %>
          </div>
          <%= render 'form', route: route, hidden: true %>
        </td>
        <td><%= link_to 'Показать', [:admin, route] %></td>
        <td><%= link_to 'Редактировать', '', class: 'edit_route', data: { route_id: route.id } %></td>
        <td><%= link_to 'Удалить', [:admin, route], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый маршрут', new_admin_route_path %>