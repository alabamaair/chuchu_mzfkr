<h1>Билеты</h1>

<table class = "table table-striped">
  <thead>
  <tr>
    <th>Номер</th>
    <th>Откуда</th>
    <th>Куда</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.number %></td>
        <td><%= ticket.start_station.title %></td>
        <td><%= ticket.end_station.title %></td>
        <td><%= link_to 'Показать', ticket %></td>
        <td><%= link_to 'Редактировать', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Отменить', ticket, method: :delete, data: { confirm: 'Вы уверены что хотите отменить билет?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Новый билет', root_path, class: "btn btn-info" %>